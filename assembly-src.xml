<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>src</id>
	<baseDirectory>/</baseDirectory>
	<formats>
		<format>tar.bz2</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>src/**/*.*</include>
				<include>install4j/**/*.*</include>
				<include>*.*</include>
			</includes>
			<excludes>
				<exclude>src/main/javahelp/eclipse/**/*.*</exclude>
				<exclude>src/main/javahelp/hs/**/*.*</exclude>
				<exclude>src/main/javahelp/html/**/*.*</exclude>
				<exclude>src/main/javahelp/latex/**/*.*</exclude>
				<exclude>src/main/javahelp/onepagehtml/**/*.*</exclude>
				<exclude>src/main/javahelp/presets/**/*.*</exclude>
				<exclude>src/main/javahelp/thumbnails/**/*.*</exclude>
				<exclude>.idea</exclude>
				<exclude>.settings</exclude>
				<exclude>.classpath</exclude>
				<exclude>.project</exclude>
				<exclude>jauswertung.iml</exclude>
			</excludes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
